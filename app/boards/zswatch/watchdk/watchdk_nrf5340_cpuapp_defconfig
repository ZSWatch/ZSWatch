# Enable MPU
CONFIG_MPU=y
CONFIG_ARM_MPU=y
CONFIG_MPU_ALLOW_FLASH_WRITE=y

# Enable hardware stack protection
CONFIG_HW_STACK_PROTECTION=y

# Enable TrustZone-M
CONFIG_ARM_TRUSTZONE_M=y

# Enable GPIO
CONFIG_GPIO=y

CONFIG_I2C=y

CONFIG_ADC=n

CONFIG_PINCTRL=y

CONFIG_PWM=y

CONFIG_COUNTER=y
CONFIG_NRFX_TIMER1=y

CONFIG_SPI=y

# Disable UART driver
CONFIG_SERIAL=n

# Disable console
CONFIG_CONSOLE=n
CONFIG_UART_CONSOLE=n

# Enable the reboot API
CONFIG_REBOOT=y

CONFIG_RESET_ON_FATAL_ERROR=y

CONFIG_CLOCK_CONTROL_NRF_K32SRC_RC=y

# Ensure GPIO P0.01 and P0.00 can be used
CONFIG_SOC_ENABLE_LFXO=n

# Change the NCS boot string
CONFIG_NCS_APPLICATION_BOOT_BANNER_STRING="WatchDK"

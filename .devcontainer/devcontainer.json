{
    "name": "ZSWatch Development Environment",
    "dockerFile": "Dockerfile",
	"runArgs": [
		"--env-file", "${localWorkspaceFolder}/.devcontainer/.env",
        "--network=host"
	],
	"containerEnv": {
		"WORKSPACE_DIR": "${containerWorkspaceFolder}"
	},
    "customizations": {
        "vscode": {
            "extensions": [
                "chiehyu.vscode-astyle", "ms-vscode.cpptools", "ms-vscode.cpptools-extension-pack",
                "nordic-semiconductor.nrf-connect-extension-pack", "nordic-semiconductor.nrf-kconfig",
                "nordic-semiconductor.nrf-devicetree", "nordic-semiconductor.nrf-connect",
                "DavidAnson.vscode-markdownlint", "yzhang.markdown-all-in-one", "vscode-icons-team.vscode-icons",
                "donjayamanne.githistory", "Gruntfuggly.todo-tree", "codechecker.vscode-codechecker",
                "mhutchie.git-graph", "cschlosser.doxdocgen", "mcu-debug.debug-tracker-vscode", "marus25.cortex-debug"
            ],
            "settings": {
                "editor.tabSize": 4,
                "editor.insertSpaces": true,
                "editor.detectIndentation": false,
                "editor.formatOnSave": true, 
                "editor.defaultFormatter": "chiehyu.vscode-astyle",
                "workbench.iconTheme": "vscode-icons",
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.shell.linux": "/bin/bash",
                "git.autofetch": true,
				"astyle.astylerc": "${workspaceRoot}/app/tools/astyle.cfg",
				"nrf-connect.applications": [
					"${workspaceFolder}/app"
				],
				"nrf-connect.boardRoots": [
					"${workspaceFolder}/app"
				],
                "nrf-connect.debugging.bindings": {
                    "${workspaceFolder}/app/debug_rev3": "ZSWatch GDB Remote Debug-Rev3",
                    "${workspaceFolder}/app/debug_rev4": "ZSWatch GDB Remote Debug-Rev4"
                }
            }
        }
    },
	"forwardPorts": [8001]
}
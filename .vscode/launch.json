{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Native (sudo)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/app/build/zephyr/zephyr.exe",
            "args": ["--bt-dev=hci0"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Disable BT",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "${workspaceFolder}/.vscode/sudo_gdb.sh",
            "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
            ]
        }
    ]
}